<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.tdevelopers.alteration.home.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#25ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cfffffff">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#0dffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/txtprofilename"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/fontstyle"
                        android:gravity="center"
                        android:text="ALTERATIONS"
                        android:textColor="@color/titles_color"
                        android:textSize="@dimen/title"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/cartIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="0dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:padding="8dp"
                            android:src="@drawable/shoppingbag" />

                        <TextView
                            android:id="@+id/txtitemsquantity"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="-15dp"
                            android:layout_marginTop="14dp"
                            android:layout_toRightOf="@+id/cartIcon"
                            android:background="@drawable/badge_circle"
                            android:fontFamily="@font/fontstyle_light"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text=""
                            android:textColor="#FFF"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dedddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtexplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/fontstyle_medium"
                    android:text="Welcome to Alterations by Garme!\nExplore fashion options."
                    android:textColor="#6b6a6a"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/banner1"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_toLeftOf="@+id/txtcenter1"
                        android:background="@drawable/banner0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/fontstyle"
                                android:gravity="center"
                                android:text="ALTER"
                                android:textColor="@android:color/white"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/fontstyle_light"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp"
                                android:text="Get your favorite garments back to your shape"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtcenter1"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:id="@+id/banner2"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_toRightOf="@+id/txtcenter1"
                        android:background="@drawable/banner1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/fontstyle"
                                android:gravity="center"
                                android:text="REFRESH"
                                android:textColor="@android:color/white"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/fontstyle_light"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp"
                                android:text="Get your favorite garments back to life"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/banner3"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_toLeftOf="@+id/txtcenter2"
                        android:background="@drawable/banner2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/fontstyle"
                                android:gravity="center"
                                android:text="CUSTOMIZE"
                                android:textColor="@android:color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/fontstyle_light"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp"
                                android:text="Something awesome is coming soon in this place!!"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/commingrounded"
                                android:fontFamily="@font/fontstyle"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="4dp"
                                android:text="Coming Soon"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtcenter2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                    <RelativeLayout
                        android:id="@+id/banner4"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_toRightOf="@+id/txtcenter2"
                        android:background="@drawable/banner3"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/fontstyle"
                                android:gravity="center"
                                android:text="SHOP"
                                android:textColor="@android:color/white"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="8dp"
                                android:fontFamily="@font/fontstyle_light"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp"
                                android:text="Shop our exclusive Designer Collection"
                                android:textColor="@android:color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/commingrounded"
                                android:fontFamily="@font/fontstyle"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="4dp"
                                android:text="Coming Soon"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/viewbootom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/cd"
            android:background="#dedddd" />

        <LinearLayout
            android:id="@+id/cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fbfbfb"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/bv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_house_black_silhouette_without_door" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/fontstyle"
                    android:text="Home"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_round_account_button_with_user_inside" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/fontstyle"
                    android:text="Account"
                    android:textColor="#9b9b9b"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>