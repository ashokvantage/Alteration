<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/AlertBootomSheet"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/fontstyle"
                android:text="Close"
                android:textColor="@color/sub_titles_colors"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imgview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/aaaaaa" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgview"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imgview"
                    android:background="@mipmap/ddownarrow" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imgview"
                    android:layout_alignStart="@+id/imgview"
                    android:layout_below="@+id/imgview"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtpatchup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fontstyle"
                        android:text="Patch Up"
                        android:textColor="@color/titles_color"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtpatchup"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/fontstyle"
                        android:text="80/-"
                        android:textColor="@color/product_price_color"
                        android:textSize="15sp" />

                    <FrameLayout
                        android:id="@+id/frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/txtpatchup"
                        android:layout_alignStart="@+id/txtpatchup"
                        android:layout_below="@+id/txt"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/plusMinusLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/backt"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:paddingBottom="2dp"
                                android:paddingEnd="4dp"
                                android:paddingStart="4dp"
                                android:paddingTop="2dp"
                                android:textSize="17sp"
                                app:srcCompat="@drawable/ic_remove" />


                            <TextView

                                android:id="@+id/quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingEnd="4dp"
                                android:paddingStart="4dp"
                                android:text="0"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />


                            <ImageView
                                android:id="@+id/plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="2dp"
                                android:paddingEnd="4dp"
                                android:paddingStart="4dp"
                                android:paddingTop="2dp"
                                android:textSize="17sp"
                                app:srcCompat="@drawable/ic_add" />

                        </LinearLayout>
                    </FrameLayout>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/imgview"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fontstyle"
                    android:paddingRight="5dp"
                    android:text="Click to Tag/Upload  "
                    android:textColor="@color/product_price_color"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rl1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/rl1"
                    android:background="@mipmap/tarrow" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center_horizontal"
                    android:text="With every item you add to the cart,"
                    android:textColor="@color/titles_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center_horizontal"
                    android:text="Tag images of Garment you wish to get Fixed"
                    android:textColor="@color/titles_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center_horizontal"
                    android:text="Help us identify your garments &amp; serve  you accurately"
                    android:textColor="@color/product_price_color"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
