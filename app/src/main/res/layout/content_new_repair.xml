<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tdevelopers.alteration.home.NewRenewActivity"
    tools:showIn="@layout/activity_new_repair">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_above="@+id/view"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/i0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <ImageView

                    android:id="@+id/i1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView

                    android:id="@+id/i2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView

                    android:id="@+id/i3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView

                    android:id="@+id/i4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView

                    android:id="@+id/i5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView

                    android:id="@+id/i6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView

                    android:id="@+id/i7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView

                    android:id="@+id/i8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </FrameLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/lll"

                android:layout_marginTop="30dp"
                android:background="@color/colorGrey"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--
                                                <LinearLayout
                                                    android:id="@+id/modelsFrameimage"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@android:color/white"
                                                    android:orientation="horizontal">

                                                    <android.support.v7.widget.RecyclerView
                                                        android:id="@+id/modelsimage"
                                                        android:layout_width="0dp"
                                                        android:layout_height="match_parent"
                                                        android:layout_weight="1"
                                                        android:visibility="visible" />
                                                </LinearLayout>
                        -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorGrey"
                            android:visibility="visible" />

                        <LinearLayout

                            android:id="@+id/modelsFrame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="15dp"
                                android:src="@mipmap/closelist" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorGrey" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/models"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:id="@+id/hsc"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:scrollbars="none">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/collar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Collar" />

                            <TextView
                                android:id="@+id/buttons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Buttons" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Pocket" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Placket" />


                            <TextView
                                android:id="@+id/cuffs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Cuffs" />

                            <TextView
                                android:id="@+id/sleeves"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Sleeves" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Button Threads" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Back Styles" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:padding="12dp"
                                android:text="Bottom Cuts" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </RelativeLayout>


                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/fabricRv"
                    android:background="@color/colorGrey"
                    android:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fabricRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view2" />

                <LinearLayout
                    android:id="@+id/modelsFrameimage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view2"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/modelsimage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/shadow"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/rll">

                    <RelativeLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/rlright"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/rlright"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/imgopen"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@mipmap/uparrow" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/views"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/rl"
                            android:layout_toRightOf="@+id/imgopen"
                            android:background="@color/colorGrey" />

                        <RelativeLayout
                            android:id="@+id/rl"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/views">

                            <FrameLayout
                                android:id="@+id/frame2"
                                android:layout_width="50dp"
                                android:layout_height="60dp"
                                android:layout_centerVertical="true">

                                <ImageView
                                    android:id="@+id/imggarments0"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                                <ImageView

                                    android:id="@+id/imggarments1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView

                                    android:id="@+id/imggarments2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView

                                    android:id="@+id/imggarments3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView

                                    android:id="@+id/imggarments4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView

                                    android:id="@+id/imggarments5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView

                                    android:id="@+id/imggarments6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView

                                    android:id="@+id/imggarments7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <ImageView

                                    android:id="@+id/imggarments8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/frame2"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/frame2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txttitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Today's Custom Renew"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtdes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Behmoth Febric \nChineese Collor &amp; 5 more"
                                    android:textColor="@color/section_title_color"
                                    android:textSize="14sp" />


                            </LinearLayout>


                        </RelativeLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlright"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorPrimary">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgaddcart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:background="@mipmap/carticon" />

                            <TextView
                                android:id="@+id/txtprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="₹ 600"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rll"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary">

                </RelativeLayout>
            </LinearLayout>

            <!-- <View
                 android:id="@+id/overLay"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/colorGrey"
                 android:visibility="gone" />-->
            <!--  </FrameLayout>-->
        </RelativeLayout>

        <View
            android:id="@+id/overLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5000"
            android:visibility="gone" />

    </FrameLayout>

    <!--<include layout="@layout/bootom_sheet_renew_layout" />-->
</android.support.design.widget.CoordinatorLayout>
