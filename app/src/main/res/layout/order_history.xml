<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_leftt_arrow" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/back"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtorderno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fontstyle"
                        android:text="2324"
                        android:textColor="@color/titles_color"
                        android:textSize="@dimen/title"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtorderdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fontstyle_ragular"
                        android:text="20 jan 2018"
                        android:textColor="@color/sub_titles_colors"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txthelp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/fontstyle"
                    android:gravity="center"
                    android:text="HELP"
                    android:textColor="@color/blue"
                    android:textSize="14sp" />


            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_below="@+id/header"
            android:background="@color/line_color" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v4.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#ECECEC"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/txtstatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/fontstyle"
                                        android:padding="10dp"
                                        android:text="Order Status"
                                        android:textColor="@color/sub_titles_colors"
                                        android:textSize="17sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:background="#FBBC05"
                                        android:paddingBottom="3dp"
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:paddingTop="3dp"
                                        android:text="In Workshop"
                                        android:textColor="#FFFFFF"
                                        android:textSize="14sp" />

                                </RelativeLayout>


                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/orderhistoryRv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="vertical"
                                android:paddingTop="20dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/fontstyle_ragular"
                                    android:text="BILL TOTAL"
                                    android:textColor="@color/sub_titles_colors"
                                    android:textSize="@dimen/sub_title"
                                    android:textStyle="bold"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginLeft="32dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="16dp"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/alltrationLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/txttotalitem"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="4dp"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/fontstyle_light"
                                            android:text="Altration"
                                            android:textColor="@color/product_name_color"
                                            android:textSize="@dimen/product_name"
                                            android:textStyle="bold"/>

                                        <TextView
                                            android:id="@+id/txttotalprice"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/fontstyle"
                                            android:textColor="@color/product_sub_name_color"
                                            android:textSize="@dimen/product_name" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp">

                                        <TextView
                                            android:id="@+id/txtgstmessage"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="4dp"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/fontstyle"
                                            android:text="Tax (18% GST)"
                                            android:textColor="@color/product_sub_name_color"
                                            android:textSize="14sp"
                                            android:textStyle="italic" />

                                        <TextView
                                            android:id="@+id/txtgstprice"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/fontstyle"
                                            android:textColor="@color/product_sub_name_color"
                                            android:textSize="14sp"/>

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/expertPriceLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="4dp"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/fontstyle"
                                            android:text="Expert Fees"
                                            android:textColor="@color/product_sub_name_color"
                                            android:textSize="14sp"
                                            android:textStyle="italic"  />

                                        <TextView
                                            android:id="@+id/expertPrice"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginTop="4dp"
                                            android:text=""
                                            android:fontFamily="@font/fontstyle"
                                            android:textColor="@color/product_sub_name_color"
                                            android:textSize="14sp" />

                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:id="@+id/deliveryLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="4dp"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/fontstyle"
                                            android:text="Delivery"
                                            android:textColor="@color/product_sub_name_color"
                                            android:textSize="14sp"
                                            android:textStyle="italic" />

                                        <TextView
                                            android:id="@+id/deliveryPrice"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="@font/fontstyle"
                                            android:textColor="@color/product_sub_name_color"
                                            android:textSize="14sp"  />

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:layout_marginBottom="8dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@color/separator_line" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="8dp"
                                            android:layout_toLeftOf="@+id/txttotalpricewithgst"
                                            android:fontFamily="@font/fontstyle_light"
                                            android:text="Paid Total"
                                            android:textColor="@color/product_name_color"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <TextView
                                            android:id="@+id/txttotalpricewithgst"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:fontFamily="@font/fontstyle_light"
                                            android:textColor="@color/product_name_color"
                                            android:textSize="17sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_marginTop="15dp"
                                android:background="@color/seperater" />

                            <RelativeLayout
                                android:id="@+id/ll_add_meas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/continues"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:id="@+id/lladdress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/view1"
                                    android:orientation="vertical"
                                    android:paddingBottom="15dp"
                                    android:paddingTop="15dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/fontstyle_ragular"
                                        android:text="PAYMENT METHOD"
                                        android:textColor="@color/product_sub_name_color"
                                        android:textSize="17sp" />

                                    <TextView
                                        android:id="@+id/txtpayment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:background="#f6f7f9"
                                        android:fontFamily="@font/fontstyle"
                                        android:paddingBottom="8dp"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:paddingTop="8dp"
                                        android:singleLine="false"
                                        android:textColor="@color/product_name_color"
                                        android:textSize="17sp" />


                                </LinearLayout>

                                <View
                                    android:id="@+id/view1"
                                    android:layout_width="0.5dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/lladdress"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@color/separator_line" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/view1"
                                    android:orientation="vertical"
                                    android:paddingBottom="15dp"
                                    android:paddingTop="15dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/fontstyle_ragular"
                                        android:text="MEASUREMENTS"
                                        android:textColor="@color/product_sub_name_color"
                                        android:textSize="17sp" />

                                    <TextView
                                        android:id="@+id/txtmeasurment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:background="#f6f7f9"
                                        android:fontFamily="@font/fontstyle"
                                        android:paddingBottom="8dp"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:paddingTop="8dp"
                                        android:singleLine="true"
                                        android:textColor="@color/product_name_color"
                                        android:textSize="16sp" />

                                </LinearLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:background="@color/seperater" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:background="@android:color/white"
                                android:orientation="vertical"
                                android:paddingBottom="15dp"
                                android:paddingTop="15dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/fontstyle_ragular"
                                    android:text="DELIVERY ADDRESS"
                                    android:textColor="@color/sub_titles_colors"
                                    android:textSize="@dimen/sub_title"
                                    android:textStyle="bold"/>


                                <TextView
                                    android:id="@+id/txtaddressname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:drawableLeft="@mipmap/address"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/fontstyle"
                                    android:gravity="center_vertical"
                                    android:text="address name"
                                    android:textColor="@color/product_name_color"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/txtfulladdress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/fontstyle_ragular"
                                    android:paddingBottom="20dp"
                                    android:text="full address"
                                    android:textColor="@color/product_sub_name_color"
                                    android:textSize="17sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v4.widget.NestedScrollView>
                </RelativeLayout>
            </FrameLayout>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
